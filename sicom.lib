#ENDIF
 MOVE '' TO !2
 MOVE !1 TO ST@CONTA@CONTABIL
 
 REPEAT
  REMOVE '.' FROM ST@CONTA@CONTABIL
 UNTIL [~FOUND]
 
 MOVE (TRIM(MID(ST@CONTA@CONTABIL,9,1))) TO ST@CONTA@CONTABIL
 MOVE ST@CONTA@CONTABIL TO !2
