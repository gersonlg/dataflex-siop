                     END
                IF !3 EQ 'MOVIMENTO_MENSAL' BEGIN
                                             IF ENCERRA.ENVIOU_MENSAL EQ '' BEGIN
                                                                             ADVERTE 'ATEN€ŽO, MOVIMENTO DO MˆS ANTERIOR NŽO ENVIADO AO TCE - ATUALIZE INFORMA€”ES NO M¢DULO DE FECHAMENTO (INF. PACOTES TCE)'
                                                                             GOTO INICIO
                                                                            END
                                            END
                IF !3 EQ 'BALANCETE_CONTABIL' BEGIN
