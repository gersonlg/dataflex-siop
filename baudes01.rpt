                             MOVE 'CCONTAS2 1 ' TO ST_JUNTA
                             APPEND ST_JUNTA ST@USUARIO ' ' ST@OPCAO ' ' ST@PROGRAMA ' ' ST@CODIGO@ENTIDADE ' ' ST@EXERCICIO@FINANCEIRO ' ' JN_ANO_INICIAL
                             CHAIN WAIT ST_JUNTA EXPORT_FILES
                             MOVE 0 TO CURRENT_IMAGE
